<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:layout_marginBottom="8dp"

    app:cardBackgroundColor="@color/gray_background"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/timeStart"
                    style="@style/TextViewMain"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="06:37" />

                <TextView
                    android:id="@+id/timeDuration"
                    style="@style/TextViewSecondaryGray"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="45 мин" />

                <TextView
                    android:id="@+id/timeEnd"
                    style="@style/TextViewMain"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="07:22" />
            </LinearLayout>

            <TextView
                android:id="@+id/price"
                style="@style/TextViewMainBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="399₽" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/stationStart"
                style="@style/TextViewSecondaryBlack"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Москва Казанский" />

            <TextView
                android:id="@+id/dash"
                style="@style/TextViewSecondaryBlack"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:text="—" />

            <TextView
                android:id="@+id/stationEnd"
                style="@style/TextViewSecondaryBlack"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Рязань 1" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>